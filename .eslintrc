{
    "extends": "eslint:recommended",
    "env": {
      "browser": true,
      "node": true,
      "es6": true
    },
    "rules": {
      // "indent": 2,
      "no-console": 0,
      "semi": ["error", "always"]
    },
    // Optional Chaining Support
    // https://eslint.org/blog/2020/07/eslint-v7.5.0-released/#optional-chaining-support
    "parserOptions": {
      "sourceType": "module",
      "ecmaVersion": 2022
  }
}

